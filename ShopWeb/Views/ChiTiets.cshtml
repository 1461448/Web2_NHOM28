@model IEnumerable<ShopWeb.Models.SanPham>

<div class="columns-container">
    <div class="container" id="columns">
        <!-- breadcrumb -->
        <div class="breadcrumb clearfix">
            <a class="home" href="#" title="Return to Home" style="text-decoration: none;">Trang chủ</a>
            <span class="navigation-pipe">&nbsp;</span>
            <a href="#" title="Return to Home" style="text-decoration: none;">Vang trắng</a>
            <span class="navigation-pipe">&nbsp;</span>
            <a href="#" title="Return to Home" style="text-decoration: none;">Vang trắng Chile</a>
            <span class="navigation-pipe">&nbsp;</span>
            <a href="#" title="Return to Home" style="text-decoration: none;">Rượu vang Morande Gran Reserva – Chile</a>
        </div>
        <!-- ./breadcrumb -->
        <!-- row -->
        <div class="row">
            @foreach (var item in Model)
            {
            <!-- Center colunm-->
                <div class="center_column col-xs-12 col-sm-12" id="center_column">
                    <!-- Product -->
                    <div id="product">
                        <div class="primary-box row">
                            <div class="pb-left-column col-xs-12 col-sm-5">
                                <!-- product-imge-->
                                <div class="product-image">
                                    <div class="product-full">

                                        <img id="product-zoom" src="~/imagess/@item.HinhURL" />
                                    </div>
                                    <div class="product-img-thumb" id="gallery_01">
                                        <ul class="owl-carousel" data-items="3" data-nav="true" data-dots="false" data-margin="21" data-loop="false"></ul>
                                    </div>
                                </div>
                                <!-- product-imge-->
                            </div>
                            <div class="pb-right-column col-xs-12 col-sm-7">
                                @using (Html.BeginForm("Nhap", "Modules"))
                                {
                                    <h1 class="product-name">@item.TenSanPham</h1>

                                    <div class="product-price-group">
                                        <span class="price">@item.GiaSanPham VNĐ</span>
                                    </div>
                                    <div class="info-orther">
                                        <p>Mã Sản Phẩm: @item.MaSanPham</p>

                                        <p>Xuất Xứ: Chile</p>
                                    </div>
                                    <div class="product-desc">
                                        @item.MoTa
                                    </div>
                                    <div class="form-option">
                                        <p class="form-option-title">Tùy chọn:</p>

                                        <div class="attributes">
                                            <div class="attribute-label">Số lượng:</div>
                                            <div class="attribute-list product-qty">
                                                <div class="qty">
                                                    <input id="option-product-qty" type="text" value="1" name="Soluong" />
                                                    <input type="hidden" name="id" value="@item.MaSanPham" />
                                                </div>
                                                <div class="btn-plus">
                                                    <a href="#" class="btn-plus-up">
                                                        <i class="fa fa-caret-up"></i>
                                                    </a>
                                                    <a href="#" class="btn-plus-down">
                                                        <i class="fa fa-caret-down"></i>
                                                    </a>
                                                </div>
                                            </div>
                                            <div class="attribute-label">Số lượng còn:</div>
                                            <div class="attribute-list product-qty">
                                                <div class="qty">
                                                    <input id="option-product-qty" type="text" value="@item.SoLuongTon" />
                                                </div>
                                                <div class="btn-plus">
                                                    <a href="#" class="btn-plus-up">
                                                        <i class="fa fa-caret-up"></i>
                                                    </a>
                                                    <a href="#" class="btn-plus-down">
                                                        <i class="fa fa-caret-down"></i>
                                                    </a>
                                                </div>
                                            </div>
                                        </div>
                                    </div>

                                    <div class="form-action">
                                        <div class="button-group">

                                            <input type="submit" class="btn-add-cart" href="#" style="text-decoration: none;" value="Thêm vào giỏ hàng" />

                                        </div>
                                    </div>
                                }
                            </div>
                        </div>
                        <!-- tab product -->
                        <div class="product-tab">
                            <ul class="nav-tab">
                                <li class="active">
                                    <a aria-expanded="false" data-toggle="tab" href="#product-detail" style="text-decoration: none;">Chi tiết sản phẩm</a>
                                </li>
                                <li>
                                    <a aria-expanded="true" data-toggle="tab" href="#information" style="text-decoration: none;">Thông tin</a>
                                </li>
                            </ul>
                            <div class="tab-container">
                                <div id="product-detail" class="tab-panel active">@item.MoTa</div>
                                <div id="information" class="tab-panel">
                                    <table class="table table-bordered">
                                        <tr>
                                            <td width="200">Xuất xứ: </td>
                                            <td>@item.HangSanXuat.TenHangSanXuat</td>
                                        </tr>
                                        <tr>
                                            <td>Loại: </td>
                                            <td>@item.LoaiSanPham.TenLoaiSanPham</td>
                                        </tr>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>

    </div>
</div>