@model WebShop.Areas.Administrator.Models.SanPham

@{
    ViewBag.Title = "CapNhat";
    Layout = "~/Areas/Administrator/Views/Shared/_Layout.cshtml";
}


<ul class="breadcrumb">
    <li>
        <p>TRANG CẬP NHẬT SẢN PHẨM</p>
    </li>
    <li>
        <b>Chỉnh sửa</b>
    </li>
</ul>
<div class="page-title">
    <a href="@Url.Action("Index", "SanPham")">
        <i class="icon-custom-left"></i>
    </a>
    <h3>Trở về - <span class="semi-bold">TRANG SẢN PHẨM</span></h3>
</div>

<div style="background-color:white; height:600px;">
    @using (Html.BeginForm("CapNhat", "SanPham", null, FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        @Html.AntiForgeryToken()
        <table>
            <tr>
                <td width="1000">
                    <div style="height:500px;">
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        @Html.HiddenFor(model => model.MaSanPham)
                        <div class="form-group">
                            @Html.LabelFor(model => model.TenSanPham, htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.TenSanPham, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.TenSanPham, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(model => model.MaLoaiSanPham, htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-10">
                                @Html.DropDownList("MaLoaiSanPham", (IEnumerable<SelectListItem>)ViewBag.LoaiSanPhams, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.MaLoaiSanPham, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(model => model.MaHangSanXuat, htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-10">
                                @Html.DropDownList("MaHangSanXuat", (IEnumerable<SelectListItem>)ViewBag.HangSanXuats, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.MaHangSanXuat, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.GiaSanPham, new { @class = "control-label col-md-2" })
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.GiaSanPham, new { @class = "control-label col-md-2" })
                                @Html.ValidationMessageFor(model => model.GiaSanPham, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.NgayNhap, htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.NgayNhap, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.NgayNhap, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.SoLuongTon, htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.SoLuongTon, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.SoLuongTon, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(model => model.MoTa, htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-10">
                                <div class="">
                                    <div class="grid-body no-border">
                                        <textarea id="MoTa" name="MoTa" placeholder="Enter text ..." class="form-control" rows="10">@Model.MoTa</textarea>
                                    </div>
                                </div>
                                @Html.ValidationMessageFor(model => model.MoTa, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="control-label col-md-2 ">Thêm hình</div>
                            <div class="col-md-5 no-border">
                                <input type="file" id="file" multiple name="upload" value="Duyệt" />
                            </div>
                        </div>

                    </div>
                </td>
                <td width="430">
                    <div class="clearfix"></div>
                    <div class="superbox">
                        @foreach (var image in Model.HinhAnhs)
                        {
                            if (image.BiXoa == false)
                            {
                                <div class="superbox-list">
                                    <input type="checkbox" name="GiaTri[]" value="@image.Ma" />
                                    <img src="@Url.Content("~/Images/" + image.TenHinh)" width="100" height="100" class="superbox-img" />
                                </div>
                            }
                        }
                    </div>
                </td>
            </tr>
            <tr>
                <td>
                    <center>
                        <div class="form-group">
                            <div class="col-md-offset-2 col-md-10">
                                <input type="submit" value="Cập nhật" class="btn btn-default" />
                            </div>
                        </div>
                    </center>
                </td>
            </tr>

        </table>
    }
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
