@model WebShop.Areas.Administrator.Models.DonDatHang

@{
    ViewBag.Title = "CapNhat";
    Layout = "~/Areas/Administrator/Views/Shared/_Layout.cshtml";
}

<h2>CapNhat</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>DonDatHang</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        
        @Html.HiddenFor(model=>model.MaDonDatHang)

      
        <div class="form-group">
            @Html.LabelFor(model => model.GhiChu, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextAreaFor(model => model.GhiChu, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.GhiChu, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="control-label col-md-2">
                Tình trạng
            </div>
            <div class="col-md-10">
                @Html.DropDownList("MaTinhTrang",(IEnumerable<SelectListItem>)ViewBag.TinhTrangs, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.MaTinhTrang, "", new { @class = "text-danger" })
            </div>
        </div>

        

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
