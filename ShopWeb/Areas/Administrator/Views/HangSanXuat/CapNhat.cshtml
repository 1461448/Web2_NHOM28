@model WebShop.Areas.Administrator.Models.HangSanXuat

@{
    ViewBag.Title = "CapNhat";
    Layout = "~/Areas/Administrator/Views/Shared/_Layout.cshtml";
}

<h2>CapNhat</h2>
<div class="content">
    <ul class="breadcrumb">
        <li>
            <p>YOU ARE HERE</p>
        </li>
        <li>
            <a href="#" class="active">Tables</a>
        </li>
    </ul>
    <div class="page-title">
        <i class="icon-custom-left"></i>
        <h3>Basic - <span class="semi-bold">Tables</span></h3>
    </div>
</div>

@using (Html.BeginForm("CapNhat", "HangSanXuat", null, FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">

        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        @Html.HiddenFor(model => model.MaHangSanXuat)

        <div class="form-group">
            @Html.LabelFor(model => model.TenHangSanXuat, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.TenHangSanXuat, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.TenHangSanXuat, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="control-label col-md-2">
                Logo hiện tại
            </div>
            <div class="col-md-10">
                <img src="@Url.Content("~/Images/Logo/" + Model.LogoURL)" width="60" height="60" />
                @Html.ValidationMessageFor(model => model.LogoURL, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="control-label col-md-2">
                Thay đổi ảnh
            </div>
            <div class="col-md-10">
                <input type="file" name="upload" id="upload" />
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Quay lại trang trước", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
